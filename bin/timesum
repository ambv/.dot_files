#!/usr/bin/env python3.9
import re
import sys

TIME_RE = re.compile(
    r"""
    ( ( \d{1,3} )  # HH
      :
    )?
    ( \d{1,3} )    # MM
      :
    ( \d{2} )      # SS
    """,
    re.X,
)


def timesum(times: str) -> str:
    result = 0
    for _, h, m, s in TIME_RE.findall(times):
        result += 3600 * int(h or 0) + 60 * int(m) + int(s)
    if result >= 3600:
        return f"{result // 3600:02d}:{(result % 3600) // 60:02d}:{result % 60:02d}"
    return f"{result // 60:02d}:{result % 60:02d}"


def main() -> None:
    times = " ".join(line.strip() for line in sys.stdin.readlines())
    times += " " + " ".join(sys.argv[1:])
    print(timesum(times))


if __name__ == "__main__":
    main()

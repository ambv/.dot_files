#!/bin/sh

#port clean installed
#port -f uninstall installed

#port selfupdate

P="port install"

$P bash-completion
$P colordiff
$P curl
$P fwknop
$P gawk
$P gimp2
$P gtk2-aurora
$P gtk2-clearlooks
$P gtk-theme-switch
$P htop
$P ImageMagick +jpeg2
$P lftp
$P mc
$P memcached
$P minicom
$P nmap
$P pbzip2
$P postgresql84
$P postgresql84-server
$P ctags
$P python24
$P py-setuptools
$P py-ctags
$P python25
$P py25-setuptools
$P py25-ctags
$P python26
$P py26-distribute
$P py26-ctags
$P python27
$P py27-distribute
$P python31
$P py31-distribute
$P pwgen
$P smartmontools
$P source-highlight
$P spidermonkey
$P splint
$P sqlite3
$P subversion +bash_completion +tools
$P TeXShop
$P tree
$P valgrind
$P watch
$P wget
$P wine-devel

# with dependencies
$P bzr
$P git-core +bash_completion +svn
$P MacVim +huge +python26 +cscope
$P mercurial +bash_completion
$P vim +huge +python26 +shell +x11 +cscope

# do some default setup
defaults write org.vim.MacVim MMZoomBoth 1
defaults write org.vim.MacVim MMCellWidthMultiplier 1.0
sudo port load memcached
